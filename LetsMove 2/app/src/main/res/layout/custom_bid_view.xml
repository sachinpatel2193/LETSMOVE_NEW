<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView

        android:text="Description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:id="@+id/view_bids_transporter_bid_description"
        android:layout_below="@+id/view_bids_transporter_bid_amount"
        android:layout_alignLeft="@+id/view_bids_transporter_name"
        android:layout_alignStart="@+id/view_bids_transporter_name"
        android:textSize="18sp" />

    <TextView
        android:text="Transporter Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:id="@+id/view_bids_transporter_name"
        android:textSize="25sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="28dp"
        android:layout_marginStart="28dp" />

    <TextView

        android:text="Transporter Review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:id="@+id/view_bids_transporter_reviews"
        android:layout_below="@+id/view_bids_transporter_name"
        android:layout_alignLeft="@+id/view_bids_transporter_name"
        android:layout_alignStart="@+id/view_bids_transporter_name" />

    <TextView

        android:text="Bid Amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/view_bids_transporter_bid_amount"
        android:layout_below="@+id/view_bids_transporter_reviews"
        android:layout_alignLeft="@+id/view_bids_transporter_reviews"
        android:layout_alignStart="@+id/view_bids_transporter_reviews"
        android:textSize="20sp" />
</RelativeLayout>
