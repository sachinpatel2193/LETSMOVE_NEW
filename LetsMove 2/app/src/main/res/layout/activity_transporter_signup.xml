<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/activity_t"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.example.ankitrajput.letsmove.UserSignUp">

        <TextView
            android:id="@+id/textView2"
            android:textSize="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:text="Registration Page" />

        <EditText
            android:id="@+id/editText_company_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView2"
            android:layout_marginTop="31dp"
            android:ems="10"
            android:hint="Enter Name"
            android:inputType="textPersonName" />



        <EditText
            android:id="@+id/editText_company_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/button_Signup"
            android:layout_alignRight="@+id/button_Signup"
            android:layout_below="@+id/textView2"
            android:ems="10"
            android:hint="Enter Email"
            android:layout_marginTop="31dp"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/editText_company_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/editText_email"
            android:layout_marginTop="31dp"
            android:ems="10"
            android:hint="Choose password"
            android:inputType="textPassword" />


        <EditText
            android:id="@+id/editText_company_password2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/editText_password"
            android:layout_marginTop="31dp"
            android:ems="10"
            android:hint="Re-enter Password"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/editText_company_mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="25dp"
            android:ems="10"
            android:hint="Mobile"
            android:layout_marginTop="31dp"
            android:inputType="phone" />

        <Button
            android:id="@+id/button_Signup_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true"
            android:text="Signup" />


    </LinearLayout>
</ScrollView>