<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true">
        <Button
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="Add Post"
            android:background="#ffffff"
            android:id="@+id/one_new_post"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:text="My Post"
            android:layout_weight="1"
            android:background="#ffffff"
            android:id="@+id/two_new_post"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:text="Chat"
            android:layout_weight="1"
            android:background="#ffffff"
            android:id="@+id/three_new_post"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/r1">

        <LinearLayout
            android:id="@+id/activity_new_post"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="40dp"
            tools:context="com.example.ankitrajput.letsmove.NewPost">


            <EditText
                android:id="@+id/editText_post_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Post Title"
                android:inputType="textPersonName" />


            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Type of Transport:" />

            <Spinner
                android:id="@+id/spinnerProductType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:prompt="@string/spinner_title" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Approximate Weight:" />

            <Spinner
                android:id="@+id/spinnerApproxWeight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:prompt="@string/spinner_title2" />

            <Button
                android:id="@+id/button_choose_pic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:drawableLeft="@drawable/selectimage"
                android:layout_gravity="center"
                android:paddingLeft="105dp"
                android:paddingRight="100dp"
                android:text="Upload Pic" />

            <Button
                android:id="@+id/button_setDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:drawableLeft="@drawable/selectdate"
                android:layout_gravity="center"
                android:paddingLeft="105dp"
                android:paddingRight="95dp"
                android:text="Pickup date" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="40dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/editText_maximumAmount"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Maximum Rent"
                    android:inputType="phone" />

                <TextView
                    android:id="@+id/textView7"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="$" />
            </LinearLayout>

            <Button
                android:id="@+id/button_next"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="#426ef4"
                android:text="Next"
                android:textColor="#ffffff"
                android:gravity="center"
                android:layout_gravity="center"
                android:drawableLeft="@drawable/nextpagewhite"
                android:textSize="25dp"
                android:paddingLeft="115dp"
                android:paddingRight="110dp"
                />


        </LinearLayout>
    </ScrollView>
    </RelativeLayout>
</RelativeLayout>