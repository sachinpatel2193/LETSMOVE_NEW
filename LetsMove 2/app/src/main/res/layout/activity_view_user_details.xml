<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent">

    <RelativeLayout
        android:id="@+id/r1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="#000000"
        android:gravity="center">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="Your Profile"
            android:textColor="#ffffff"
            android:textSize="25dp" />

    </RelativeLayout>


    <ProgressBar
        android:id="@+id/progressBar_getUserDetail"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="invisible" />

    <RelativeLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center">


    </RelativeLayout>

    <LinearLayout

        android:id="@+id/linear_layout_view_user_details"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:paddingBottom="5dp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:paddingTop="15dp"
        android:visibility="invisible"
        tools:context="com.example.sachinpatel.letsmove.ViewUserDetails">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView9"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="30dp"
                android:text="Full Name :  "
                android:textColor="#000000"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/user_details_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text=""

                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView10"
                android:layout_alignStart="@+id/textView10"
                android:layout_below="@+id/textView10"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="30dp"
                android:text="Email         :  "
                android:textColor="#000000"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/user_details_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text=""
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView11"
                android:layout_alignStart="@+id/textView11"
                android:layout_below="@+id/textView11"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="30dp"
                android:text="Password :  "
                android:textColor="#000000"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/user_details_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="27dp"
                android:text="***********"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView12"
                android:layout_alignStart="@+id/textView12"
                android:layout_below="@+id/textView12"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="30dp"
                android:text="Mobile      :  "
                android:textColor="#000000"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/user_details_mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="27dp"
                android:text=""
                android:textSize="20dp" />
        </LinearLayout>


        <Button
            android:id="@+id/btn_edit_user_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="27dp"
            android:gravity="center"
            android:text="Edit Profile"
            android:layout_margin="10dp"
            android:drawableLeft="@drawable/editbtn"
            android:paddingLeft="105dp"
            android:paddingRight="100dp" />

        <Button
            android:id="@+id/btn_my_posts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="My Posts"
            android:layout_margin="10dp"
            android:visibility="invisible"
            android:drawableLeft="@drawable/list"
            android:paddingLeft="110dp"
            android:paddingRight="110dp" />


    </LinearLayout>
</RelativeLayout>